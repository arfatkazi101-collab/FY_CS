def quiz_game():
    qa = {"what is 2+2?":"4","python is a snake?(yes/no)" : "yes","i have head and tail but no body":"coin"}
    score= 0
    for q, a in qa.items():
        if input (q + " ").strip().lower()== a: score += 1
        print(f"final score : {score}/{len(qa)}")
        
        
        
quiz_game()


# simple calculater

def simple_calculater():
    print("\n---1 simple calculater ---")
    try:
        n1= float(input("enter first number:"))
        op= input("enter operator(+,-,*,/):")
        n2= float(input("enter second number:"))
        if op =='+':print(f"result:{n1+n2}")
        elif op =='-':print(f"result:{n1-n2}")
        elif op =='*':print(f"result:{n1*n2}")
        elif op == '/':print(f"result:{n1/n2}" if n2!=0 else "error: div by 0")
        else:print("invalid operator")
    except valueError : print("Error: please enter number only")
    

simple_calculater()




# file organizer (logic only) // pseudocode in notebook

import os, shutil
def organize_file(folder_path):
    # this script moves files into folders based on extension 
    # usage: oragnize_files('C:/User/Downloads')
    for file in os.listdir(folder_path):
        if os.path.isfile(os.path.join(folder_path, file)):
            ext = file.split('.')[-1]
            os.makedirs(os.path.join(folder_path, ext), exist_ok=True)
            shutil.move(os.path.join(folder_path, file), os.path.join(folder_path, ext, file))

